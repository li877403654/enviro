	function readtqbbEchart() {
		//一天中每个小时的天气，数据为2018-08-24各个小时温度
		var arrayTime = {
			0: 24, 1: 25, 2: 22, 3: 22, 4: 23, 5: 26, 6: 28, 7: 29, 8: 29, 9: 30
